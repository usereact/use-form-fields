{
    "compilerOptions": {
      "target": "es5",
      "module": "commonjs",
      "moduleResolution": "node",
      "esModuleInterop": true,
      "jsx": "react",
      "declaration": true,
      "pretty": true,
      "rootDir": "src",
      "sourceMap": false,
      "strict": true,
      "noUnusedLocals": false,
      "noUnusedParameters": false,
      "noImplicitReturns": true,
      "noImplicitAny": false,
      "noFallthroughCasesInSwitch": true,
      "outDir": "lib",
      "lib": ["es2015", "dom"]
    },
    "exclude": ["lib"]
  }